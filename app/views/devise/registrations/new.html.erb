<div style="height:calc(100vh - 80px);" class="d-flex justify-content-center align-items-center">
  <div class="card text-center" style="width:35rem;" id="lists-card">
    <div class="card-header">
      <h5 class="font-monospace">Sign up</h5>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div>
          <%= f.label :username, "Username", class: "form-label" %><br />
          <%= f.text_field :username, autofocus: true, autocomplete: "email", class: "form-control", id: "username-field", "aria-label": "username" ,id:"form-textfield" %>
        </div>
        <div>
          <%= f.label :email, "Email", class: "form-label" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "email-field", "aria-label": "Email" ,id:"form-textfield" %>
        </div>

       <div class="d-flex justify-content-around mt-2">
               <div>
          <%= f.label :password, "Password", class: "form-label" %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "password-field", "aria-label": "Password" ,id:"form-textfield"%>
        </div>

        <div>
          <%= f.label :password_confirmation, "Password Confirmation", class: "form-label" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "password-confirmation-field", "aria-label": "Password Confirmation",id:"form-textfield" %>
        </div>

       </div> 
        <div class="mt-4">
          <%= f.submit "Sign up", class: "btn btn-dark" %>
        </div>
      <% end %>
    </div>
    <div class="card-footer text-muted d-flex justify-content-center" style="gap:8px">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
